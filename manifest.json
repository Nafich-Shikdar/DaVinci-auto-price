{
  "manifest_version": 3,
  "name": "Daraz Auto Price Updater",
  "version": "1.0",
  "description": "Automatically updates Campaign Prices on Daraz Seller Dashboard",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://sellercenter.daraz.com.bd/*"],
      "js": ["content.js"]
    }
  ]
}
